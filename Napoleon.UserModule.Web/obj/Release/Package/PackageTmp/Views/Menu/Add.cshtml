<!DOCTYPE html>

<html>
<head>
    <title></title>
    @RenderPage("~/Views/Shared/Easyui.cshtml")
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 20px;
        }

            table .tableName {
                text-align: right;
                width: 100px;
            }

            table .tableValue input {
                width: 180px;
            }
    </style>
</head>
<body>
    <div style="padding: 15px;">
        <form id="AddMenuForm" method="post" data-options="novalidate:true">
            <table style="width: 100%;">
                <tr>
                    <td class="tableName">菜单名称:</td>
                    <td class="tableValue">
                        <input type="hidden" id="ProjectId" name="projectId" value='@ViewData["ProjectId"]' />
                        <input name="projectName" class="easyui-textbox" type="text" value="" data-options="required:true" />
                    </td>
                    <td class="tableName">菜单父节点:</td>
                    <td class="tableValue">
                        <input id="ParentId" name="parentId" class="easyui-combobox" type="text" value="" />
                    </td>
                </tr>
                <tr>
                    <td class="tableName">控件ID:</td>
                    <td class="tableValue">
                        <input name="htmlId" class="easyui-textbox" type="text" value="" />
                    </td>
                    <td class="tableName">链接:</td>
                    <td class="tableValue">
                        <input name="url" class="easyui-textbox" type="text" value="" />
                    </td>
                </tr>
                <tr>
                    <td class="tableName">菜单图标:</td>
                    <td class="tableValue">
                        <input id="Icon" name="icon" class="easyui-textbox" type="text" value="" />
                        <div class="easyui-linkbutton" id="CheckImg">选择</div>
                    </td>
                    <td class="tableName">排序:</td>
                    <td class="tableValue">
                        <input name="sort" class="easyui-numberbox" precision="2" data-options="required:true" type="text" value="" />
                    </td>
                </tr>
                <tr>
                    <td class="tableName">备注:</td>
                    <td class="tableValue">
                        <input name="remark" style="height: 60px;" class="easyui-textbox" type="text" data-options="multiline:true" />
                    </td>
                </tr>
            </table>
        </form>
        <div style="text-align: center;">
            <a class="easyui-linkbutton" id="SaveMenu" data-options="iconCls:'icon-save'">保存</a>
        </div>
    </div>
    <div id="myWindow"></div>
    <script type="text/javascript">
        seajs.use(["Menu/Index", "PublicFunc/Easyui"], function (index, easyui) {
            $(function () {
                var projectId = $('#ProjectId').val();
                easyui.LoadCombobox("#ParentId", '/Menu/LoadParentId?projectId=' + projectId, false, '200');
                $('#SaveMenu').on('click', index.SaveMenu);
                $('#CheckImg').on('click', index.CheckImg);
            });
        });
    </script>
</body>
</html>
