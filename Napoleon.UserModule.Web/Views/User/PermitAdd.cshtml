@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Header.cshtml";
}
<div style="padding: 10px;">
    <form id="SaveRuleForm" method="post" data-options="novalidate:true">
        <table class="tableContent">
            <tr>
                <td class="tableName">系统代码:</td>
                <td class="tableValue">
                    <input type="hidden" name="UserId" value='@ViewData["UserId"]' />
                    <input id="ProjectId" name="ProjectId" class="easyui-textbox" type="text" data-options="required:true" />
                </td>
            </tr>
            <tr>
                <td class="tableName">公司名称:</td>
                <td class="tableValue">
                    <input id="Company" name="Company" class="easyui-textbox" type="text" data-options="required:true,editable:false" />
                </td>
            </tr>
            <tr>
                <td class="tableName">角色名称:</td>
                <td class="tableValue">
                    <input id="Rule" name="Rule" class="easyui-textbox" type="text" data-options="required:true,editable:false" />
                </td>
            </tr>
        </table>
    </form>
    <div style="text-align: center;">
        <a class="easyui-linkbutton" id="SaveRule" data-options="iconCls:'icon-save'">保存</a>
    </div>
</div>
<script type="text/javascript">
    seajs.use(["User/Permit", "PublicJs/Frame/Easyui"], function (permit, easyui) {
        $(function () {
            easyui.LoadCombobox("#ProjectId", '/User/PermitProject', false, 'auto', permit.Load2Combobox);
            $('#SaveRule').on('click', permit.FixedSave);
        });
    });
</script>
