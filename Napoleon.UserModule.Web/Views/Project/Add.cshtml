<!DOCTYPE html>

<html>
<head>
    <title></title>
    @RenderPage("~/Views/Shared/Easyui.cshtml")
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 20px;
        }

            table .tableName {
                text-align: right;
                width: 100px;
            }

            table .tableValue input {
                width: 180px;
            }
    </style>
</head>
<body>
    <div style="padding: 15px;">
        <form id="AddProjectForm" method="post" data-options="novalidate:true">
            <table style="width: 100%;">
                <tr>
                    <td class="tableName">系统代码:</td>
                    <td class="tableValue">
                        <input name="projectId" class="easyui-textbox" type="text" value="" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <td class="tableName">系统名称:</td>
                    <td class="tableValue">
                        <input name="projectName" class="easyui-textbox" type="text" value="" data-options="required:true" />
                    </td>
                </tr>
                <tr>
                    <td class="tableName">备注:</td>
                    <td class="tableValue">
                        <input name="remark" style="height: 60px;" class="easyui-textbox" type="text" data-options="multiline:true" />
                    </td>
                </tr>
            </table>
        </form>
        <div style="text-align: center;">
            <a class="easyui-linkbutton" id="SaveAdd" data-options="iconCls:'icon-save'">保存</a>
        </div>
    </div>
    <script type="text/javascript">
        seajs.use("Project/Index", function (index) {
            $(function () {
                $('#SaveAdd').on('click', index.SaveAdd);
            });
        });
    </script>
</body>
</html>
